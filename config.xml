<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fakhruddinproperties.portal" version="2.7.12" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FP APP</name>
    <description>An awesome Ionic/Cordova app.</description>
    <author email="hi@ionicframework" href="http://ionicframework.com/">Ionic Framework Team</author>
    <content src="index.html" />
    <access origin="*" subdomains="true" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <splash density="land-ldpi" height="200" src="resources/android/splash/drawable-land-ldpi-screen.png" width="320" />
        <splash density="land-mdpi" height="320" src="resources/android/splash/drawable-land-mdpi-screen.png" width="480" />
        <splash density="land-hdpi" height="480" src="resources/android/splash/drawable-land-hdpi-screen.png" width="800" />
        <splash density="land-xhdpi" height="720" src="resources/android/splash/drawable-land-xhdpi-screen.png" width="1280" />
        <splash density="land-xxhdpi" height="960" src="resources/android/splash/drawable-land-xxhdpi-screen.png" width="1600" />
        <splash density="land-xxxhdpi" height="1280" src="resources/android/splash/drawable-land-xxxhdpi-screen.png" width="1920" />
        <splash density="port-ldpi" height="200" src="resources/android/splash/drawable-port-ldpi-screen.png" width="320" />
        <splash density="port-mdpi" height="320" src="resources/android/splash/drawable-port-mdpi-screen.png" width="480" />
        <splash density="port-hdpi" height="480" src="resources/android/splash/drawable-port-hdpi-screen.png" width="800" />
        <splash density="port-xhdpi" height="720" src="resources/android/splash/drawable-port-xhdpi-screen.png" width="1280" />
        <splash density="port-xxhdpi" height="960" src="resources/android/splash/drawable-port-xxhdpi-screen.png" width="1600" />
        <splash density="port-xxxhdpi" height="1920" src="resources/android/splash/drawable-port-xxxhdpi-screen.png" width="1280" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />
    </platform>
    <platform name="ios">
        <config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>You can upload your profile picture using your Photo Library</string>
        </config-file>
        <config-file parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
            <string>You can upload your profile picture using your camera</string>
        </config-file>
        <config-file parent="NSMicrophoneUsageDescription" platform="ios" target="*-Info.plist">
            <string>Need microphone access for uploading audios and videos</string>
        </config-file>
    </platform>
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="WKPort" value="8883" />
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-buildToolsVersion" value="30.0.2" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-compileSdkVersion" value="30" />
    <preference name="android-targetSdkVersion" value="30" />
    <preference name="android-supportLibVersion" value="30.0.2" />
    <preference name="android-googlePlayServicesAuthVersion" value="16.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-plugin-file-transfer" spec="1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-advanced-http" spec="2.0.1" />
    <allow-navigation href="*" />
    <plugin name="cordova-plugin-network-information" spec="2.0.1" />
    <plugin name="cordova-plugin-ionic-webview" spec="1.2.1" />
    <engine name="browser" spec="5.0.4" />
</widget>
